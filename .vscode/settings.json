{
    // Define o formatador padrão para arquivos .cs (C#)
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    
    // Formatação automática ao salvar
    "editor.formatOnSave": true,

    // Habilita as sugestões e completações de código para C#
    "omnisharp.enableRoslynAnalyzers": true,

    // Define o uso de tabs ou espaços
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    // Habilita linting e erros em tempo real para o C#
    "omnisharp.enableEditorConfigSupport": true,

    // Executa testes automaticamente ao salvar arquivos
    "dotnetTestExplorer.testProjectPath": "**/*Test/*.csproj",
    "dotnetTestExplorer.autoWatch": true,

    // Habilita o auto-format e linting com .NET analyzers
    "csharp.format.enable": true,

    // Configurações para a exibição de erros e diagnósticos do código
    "dotnet.diagnostics.enable": true,

    // Configurações de snippets e sugestões para o .NET
    "csharp.suggestSnippets": true,

    // Caminho para a SDK do .NET
    "dotnet.sdk.path": "/usr/local/share/dotnet/sdk"
}
